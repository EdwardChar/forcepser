# ルール定義の基準になるフォルダー
basedir = 'C:\your\folder'

# *.wav と *.txt の更新日時の差が何秒以内なら２つのファイルをセットとして認識するか
delta = 15.0

# 反応ルールの書き方:
# https://github.com/oov/forcepser/wiki/%E8%A8%AD%E5%AE%9A%E3%81%AB%E3%81%A4%E3%81%84%E3%81%A6

[[rule]]
dir = '%BASEDIR%'
file = '*_キャラの名前1_*.wav'
encoding = 'sjis'
layer = 1

[[rule]]
dir = '%BASEDIR%'
file = '*_キャラの名前2_*.wav'
encoding = 'sjis'
layer = 6
