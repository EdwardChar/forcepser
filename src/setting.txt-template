# 監視対象のフォルダー
dir = 'C:\your\folder'

# *.wav と *.txt の更新日時の差が何秒以内なら２つのファイルをセットとして認識するか
delta = 15.0

# 反応ルールの書き方:
#
# 以下のようなものを任意の個数記述することで、ファイル名によって振り分けできます。
# 
# [[rule]]
# layer = レイヤー番号
# file = '反応させたいファイル名'
# encoding = 'テキストファイルの文字コード'
#
#   レイヤー番号:
#       1 ～ 100: 指定されたレイヤー番号へ挿入
#   反応させたいファイル名:
#       以下の特殊文字が使えます。
#       ?: 任意の1文字
#       *: 任意の0文字以上
#   テキストファイルの文字コード:
#       以下の２種類が使えます。
#       'sjis': Shift_JIS
#       'utf8': UTF-8
#
#   例:
#     15_キャラ名_セリフ.wav を Layer 1 へ挿入したい場合
#     [[rule]]
#     layer = 1
#     file = '*_キャラ名_*.wav'
#     encoding = 'utf8'
#
#     180411_235958_キャラ名_セリフ.wav を Layer 5 へ挿入したい場合
#     [[rule]]
#     layer = 5
#     file = '??????_??????_キャラ名_*.wav'
#     encoding = 'sjis'

[[rule]]
layer = 1
file = '*_キャラの名前1_*.wav'
encoding = 'sjis'

[[rule]]
layer = 6
file = '*_キャラの名前2_*.wav'
encoding = 'sjis'
